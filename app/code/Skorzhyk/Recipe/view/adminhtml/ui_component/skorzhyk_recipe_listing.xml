    <columns name="skorzhyk_recipe_listing_columns">
        <selectionsColumn name="ids" sortOrder="10">
            <settings>
                <indexField>entity_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>55</resizeDefaultWidth>
            </settings>
        </selectionsColumn>
        <column name="recipe_id" sortOrder="20">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="customer_id" component="Magento_Ui/js/grid/columns/select" sortOrder="25">
            <settings>
                <options class="Skorzhyk\Recipe\Ui\Component\Listing\Columns\Chef"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Chef</label>
                <sorting>asc</sorting>
            </settings>
